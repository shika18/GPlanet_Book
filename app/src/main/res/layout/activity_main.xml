<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="15dp"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/tit"
        android:text="G-Book"
        android:textSize="27dp"
        android:gravity="center_horizontal"
        android:textColor="#797979"
        android:layout_marginTop="10dp"
        android:layout_weight="0.03"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_weight="0.03"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pas"
            android:text="Select a Reader :"
            android:textSize="17dp"
            android:textColor="#590d7c"
            android:layout_marginLeft="18dp"

            />


        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/country_Name"
            android:padding="6dp"
            android:layout_marginLeft="50dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.08"
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/poi"
            android:text="Reading percentage"
            android:layout_gravity="center_horizontal"
            android:textSize="19dp"
            android:textColor="#590d7c"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/point"
            android:layout_marginTop="35dp"
            android:text=""
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="#da1c3c"
            android:layout_gravity="center_horizontal"

            />

    </LinearLayout>


    <Button
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:id="@+id/addpoin"
        android:background="@drawable/borderbtn"
        android:text="View Ranking"
        android:padding="19dp"
        android:textColor="#FF674172"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:textAllCaps="false"
        android:textSize="21sp"
        android:layout_weight="0.029"
        />
</LinearLayout>